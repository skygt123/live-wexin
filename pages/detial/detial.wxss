/* pages/detial/detial.wxss */
.main {
  padding: 10rpx;
  color: #666666;
}
/* .video_info {
} */
.video_info video {
  width: 100%;
}
.video_title {
  display: flex;
  justify-content: space-between;
  font-size: 35rpx;
}
.video_detial {
  margin-top: 5rpx;
  font-size: 28rpx;
}
.video_detial .author {
  color: black;
}
.video_detial text {
  margin-left: 15rpx;
}

/* 推荐视频 */
.other_list {
  margin-top: 10rpx;
}
.item_other {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.other_img_wrap {
  width: 38%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.other_img_wrap image {
  width: 90%;
  /* height: 50rpx; */
  border-radius: 15rpx;
}
.other_info {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.other_title {
  font-size: 28rpx;
  color: #e06f93;
}
.other_detial {
  font-size: 26rpx;
  color: #666666;
}

/* 评论列表 */
.comment_wrap {
  margin-top: 10rpx;
}
.comment_title {
  padding: 10rpx;
  font-size: 28rpx;
}
.comment_list {
}
.comment_item {
  margin-bottom: 10rpx;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #666666;
}
.comment_user {
  flex: 0 0 80rpx;
  /* width: 40rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment_user image {
  width: 70%;
  border-radius: 50%;
}
.comment_info {
  display: flex;
  /* flex: 5; */
  flex-direction: column;
  justify-content: space-around;
}
.comment_detail {
  display: flex;
  justify-content: space-between;
}
.comment_detail .author {
  font-size: 28rpx;
  color: black;
}
.comment_detail .data {
  color: #666666;
  font-size: 24rpx;
}
.comment_content {
  font-size: 28rpx;
  color: black;
}
