/**index.wxss**/
page, view, image, swiper, swiper-item, navigator, video {
box-sizing:border-box;
}

page {
  color: #666;
  padding: 10rpx 10rpx;
  background: white;
}

.nav-wrap {
}
.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item {
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav_item.active {
  border-bottom: 5rpx solid palevioletred;
}
/* 轮播 */
.sliders {
  margin-top: 10rpx;
}
.sliders swiper {
  width: 100%;
  height: 220rpx;
}
.sliders swiper-item {
  width: 100%;
  height: 100%;
}
.sliders navigator {
  width: 100%;
  height: 100%;
}
.sliders image {
  width: 100%;
  height: 100%;
}

/* 视频列表 */
.video_wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}
.video_wrap .view_item {
  width: 48%;
  margin-bottom: 20rpx;
}
.video_wrap .video_img {
  position: relative;
}
.video_wrap .video_img image {
  width: 100%;
  border-radius: 15rpx;
}

.video_wrap .video_info {
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  color: #ffffff;
  font-size: 24rpx;
}
.video_title {
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.play_count_wrap,
.comment_count_row {
  display: flex;
}
